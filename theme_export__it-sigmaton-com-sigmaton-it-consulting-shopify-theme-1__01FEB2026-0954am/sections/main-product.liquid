<section class="section">
  <div class="container">
    <div class="card" style="padding:22px;">
      <div class="eyebrow">Product</div>
      <h1 style="margin:8px 0 12px 0;font-size:clamp(26px,2.6vw,42px);letter-spacing:-0.02em;">{{ product.title }}</h1>
      <div class="small">{{ product.description }}</div>
      <div class="notice" style="margin-top:14px;">Add product media/variants/cart logic if you sell products.</div>
    </div>
  </div>
</section>
{% schema %}{"name":"Main product","settings":[],"presets":[{"name":"Main product"}]}{% endschema %}
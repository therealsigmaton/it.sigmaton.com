<section class="section" id="services">
  <div class="container">
    <div style="display:flex;align-items:flex-end;justify-content:space-between;gap:18px;flex-wrap:wrap;">
      <div>
        <div class="eyebrow">{{ section.settings.eyebrow }}</div>
        <h2 class="h2">{{ section.settings.heading }}</h2>
        <p class="small" style="max-width:72ch;margin-top:12px;">{{ section.settings.subheading }}</p>
      <!--</div>
      <a class="btn secondary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
    </div>-->
    <div class="grid three" style="margin-top:22px;">
      {% for block in section.blocks %}
        <div class="card" style="padding:18px;">
          <div style="font-weight:820;font-size:18px;letter-spacing:-0.01em;">{{ block.settings.title }}</div>
          <div class="small" style="margin-top:10px;">{{ block.settings.body }}</div>
          <div class="badges" style="margin-top:12px;">
            {% if block.settings.tag_1 != blank %}<span class="badge">{{ block.settings.tag_1 }}</span>{% endif %}
            {% if block.settings.tag_2 != blank %}<span class="badge">{{ block.settings.tag_2 }}</span>{% endif %}
            {% if block.settings.tag_3 != blank %}<span class="badge">{{ block.settings.tag_3 }}</span>{% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{"name":"Services","max_blocks":12,"settings":[
{"type":"text","id":"eyebrow","label":"Eyebrow","default":"Services"},
{"type":"text","id":"heading","label":"Heading","default":"What we deliver"},
{"type":"textarea","id":"subheading","label":"Subheading","default":"Choose advisory, hands-on delivery, or a hybrid model. We scope clearly and execute in measured increments."},
{"type":"text","id":"cta_label","label":"CTA label","default":"Request pricing"},
{"type":"url","id":"cta_link","label":"CTA link"}],
"blocks":[{"type":"service","name":"Service","settings":[
{"type":"text","id":"title","label":"Title","default":"Program / PMO leadership"},
{"type":"textarea","id":"body","label":"Body","default":"Roadmaps, governance, KPIs, stakeholder alignment, and delivery execution."},
{"type":"text","id":"tag_1","label":"Tag 1","default":"Roadmaps"},
{"type":"text","id":"tag_2","label":"Tag 2","default":"RAID & risk"},
{"type":"text","id":"tag_3","label":"Tag 3","default":"Budgeting"}]}],
"presets":[{"name":"Services"}]}
{% endschema %}
<section class="section">
  <div class="container">
    <div class="card" style="padding:22px;">
      <h1 style="margin:0 0 12px 0;font-size:clamp(26px,2.6vw,42px);letter-spacing:-0.02em;">{{ section.settings.heading }}</h1>
      <p class="small">{{ section.settings.body }}</p>
      <div class="notice" style="margin-top:14px;">This starter theme is optimized for consulting. Replace cart/product sections if you sell items.</div>
      <div style="margin-top:14px;"><a class="btn secondary" href="{{ routes.all_products_collection_url }}">Browse products</a></div>
    </div>
  </div>
</section>
{% schema %}{"name":"Main cart","settings":[
{"type":"text","id":"heading","label":"Heading","default":"Cart"},
{"type":"textarea","id":"body","label":"Body","default":"Your cart is available when you enable products."}],
"presets":[{"name":"Main cart"}]}{% endschema %}
<section class="section">
  <div class="container">
    <div class="soft-panel" style="padding:22px;">
      <div class="eyebrow">404</div>
      <h1 style="margin:8px 0 10px 0;font-size:clamp(28px,3vw,44px);letter-spacing:-0.02em;">{{ section.settings.heading }}</h1>
      <p class="small" style="max-width:70ch;">{{ section.settings.body }}</p>
      <div style="margin-top:16px;"><a class="btn" href="{{ routes.root_url }}">{{ section.settings.cta_label }}</a></div>
    </div>
  </div>
</section>
{% schema %}{"name":"Main 404","settings":[
{"type":"text","id":"heading","label":"Heading","default":"Page not found"},
{"type":"textarea","id":"body","label":"Body","default":"The page you’re looking for doesn’t exist or was moved."},
{"type":"text","id":"cta_label","label":"CTA label","default":"Back to home"}],
"presets":[{"name":"Main 404"}]}{% endschema %}
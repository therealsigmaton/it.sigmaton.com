<section class="section">
  <div class="container">
    <div class="card" style="padding:22px;">
      <div class="eyebrow">Collection</div>
      <h1 style="margin:8px 0 12px 0;font-size:clamp(26px,2.6vw,42px);letter-spacing:-0.02em;">{{ collection.title }}</h1>
      {% if collection.description != blank %}<div class="small">{{ collection.description }}</div>{% endif %}
      <div class="notice" style="margin-top:14px;">Product grids are minimal placeholders.</div>
    </div>
  </div>
</section>
{% schema %}{"name":"Main collection","settings":[],"presets":[{"name":"Main collection"}]}{% endschema %}
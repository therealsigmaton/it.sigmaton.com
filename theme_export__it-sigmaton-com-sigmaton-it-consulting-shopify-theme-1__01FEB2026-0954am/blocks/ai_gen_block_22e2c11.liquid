{% doc %}
  @prompt
    Create a collapsible accordion section with 5 expandable items for a Services page. Each accordion item should have a clickable header that expands/collapses to show content underneath. Include smooth animations when opening and closing. The section should be titled "Services" and include 5 accordion items labeled "Service 1" through "Service 5" with editable content areas for each service description.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-accordion-container-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-accordion-title-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 30px;
  }

  .ai-accordion-items-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
  }

  .ai-accordion-item-{{ ai_gen_id }} {
    border: 1px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    margin-bottom: {{ block.settings.item_spacing }}px;
    overflow: hidden;
    background-color: {{ block.settings.item_background }};
  }

  .ai-accordion-header-{{ ai_gen_id }} {
    width: 100%;
    padding: 20px 24px;
    background-color: {{ block.settings.header_background }};
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s ease;
  }

  .ai-accordion-header-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.header_hover_background }};
  }

  .ai-accordion-header-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: 600;
    color: {{ block.settings.header_text_color }};
    margin: 0;
  }

  .ai-accordion-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
    color: {{ block.settings.icon_color }};
  }

  .ai-accordion-item-{{ ai_gen_id }}.active .ai-accordion-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-accordion-content-wrapper-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .ai-accordion-content-{{ ai_gen_id }} {
    padding: 0 24px 20px;
    color: {{ block.settings.content_text_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-accordion-container-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-accordion-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-accordion-header-{{ ai_gen_id }} {
      padding: 16px 20px;
    }

    .ai-accordion-header-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.header_font_size }}px * 0.9);
    }

    .ai-accordion-content-{{ ai_gen_id }} {
      padding: 0 20px 16px;
      font-size: calc({{ block.settings.content_font_size }}px * 0.9);
    }
  }
{% endstyle %}

<accordion-block-{{ ai_gen_id }} class="ai-accordion-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_title != blank %}
    <h2 class="ai-accordion-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
  {% endif %}

  <div class="ai-accordion-items-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign title_key = 'item_' | append: i | append: '_title'
        assign content_key = 'item_' | append: i | append: '_content'
        assign item_title = block.settings[title_key]
        assign item_content = block.settings[content_key]
      %}

      <div class="ai-accordion-item-{{ ai_gen_id }}" data-accordion-item="{{ i }}">
        <button
          class="ai-accordion-header-{{ ai_gen_id }}"
          aria-expanded="false"
          aria-controls="ai-accordion-content-{{ ai_gen_id }}-{{ i }}"
        >
          <h3 class="ai-accordion-header-title-{{ ai_gen_id }}">{{ item_title }}</h3>
          <svg
            class="ai-accordion-icon-{{ ai_gen_id }}"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </button>
        <div
          class="ai-accordion-content-wrapper-{{ ai_gen_id }}"
          id="ai-accordion-content-{{ ai_gen_id }}-{{ i }}"
        >
          <div class="ai-accordion-content-{{ ai_gen_id }}">
            {{ item_content }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</accordion-block-{{ ai_gen_id }}>

<script>
  (function() {
    class AccordionBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.items = this.querySelectorAll('.ai-accordion-item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.items.forEach((item) => {
          const header = item.querySelector('.ai-accordion-header-{{ ai_gen_id }}');
          const contentWrapper = item.querySelector('.ai-accordion-content-wrapper-{{ ai_gen_id }}');
          const content = item.querySelector('.ai-accordion-content-{{ ai_gen_id }}');

          header.addEventListener('click', () => {
            const isActive = item.classList.contains('active');

            if (isActive) {
              item.classList.remove('active');
              header.setAttribute('aria-expanded', 'false');
              contentWrapper.style.maxHeight = '0';
            } else {
              item.classList.add('active');
              header.setAttribute('aria-expanded', 'true');
              contentWrapper.style.maxHeight = content.scrollHeight + 'px';
            }
          });
        });
      }
    }

    customElements.define('accordion-block-{{ ai_gen_id }}', AccordionBlock{{ ai_gen_id }});
  })();
</script>


{% doc %}
  @prompt
    a section that is cool chic and for the about us section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-about-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-about-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    align-items: center;
  }

  .ai-about-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-about-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-about-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-about-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-about-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-about-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-about-eyebrow-{{ ai_gen_id }} {
    font-size: {{ block.settings.eyebrow_size }}px;
    color: {{ block.settings.eyebrow_color }};
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 500;
    margin-bottom: 16px;
    display: block;
  }

  .ai-about-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 24px 0;
    line-height: 1.2;
    font-weight: 600;
  }

  .ai-about-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .ai-about-text-{{ ai_gen_id }} p {
    margin: 0 0 16px 0;
  }

  .ai-about-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-about-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_bg_color }};
  }

  .ai-about-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_bg_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-about-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-about-image-wrapper-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-about-content-{{ ai_gen_id }} {
      padding: 0;
    }

    .ai-about-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.75);
    }
  }
{% endstyle %}

<about-section-{{ ai_gen_id }} class="ai-about-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-about-container-{{ ai_gen_id }}">
    {% if block.settings.layout == 'image_left' %}
      <div class="ai-about-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-about-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-about-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-about-empty-state-{{ ai_gen_id }}">
              Add an image to bring your story to life
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-about-content-{{ ai_gen_id }}">
      {% if block.settings.eyebrow != blank %}
        <span class="ai-about-eyebrow-{{ ai_gen_id }}">{{ block.settings.eyebrow }}</span>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h2 class="ai-about-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-about-text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-about-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    {% if block.settings.layout == 'image_right' %}
      <div class="ai-about-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-about-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-about-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-about-empty-state-{{ ai_gen_id }}">
              Add an image to bring your story to life
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</about-section-{{ ai_gen_id }}>

<script>
  (function() {
    class AboutSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('about-section-{{ ai_gen_id }}', AboutSection{{ ai_gen_id }});
  })();
</script>


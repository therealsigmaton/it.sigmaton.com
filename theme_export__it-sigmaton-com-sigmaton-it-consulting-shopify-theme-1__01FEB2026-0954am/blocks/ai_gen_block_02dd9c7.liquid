{% doc %}
  @prompt
    Create a collapsible accordion section with 5 expandable items for a Services page. Each accordion item should have a clickable header that expands/collapses to show content underneath. Include smooth animations when opening and closing. The section should be titled "Services" and include 5 accordion items labeled "Service 1" through "Service 5" with editable content areas for each service description.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-accordion-container-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-accordion-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    text-align: {{ block.settings.title_alignment }};
  }

  .ai-accordion-items-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-accordion-item-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.item_background }};
    overflow: hidden;
  }

  .ai-accordion-header-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.header_padding }}px;
    background-color: {{ block.settings.header_background }};
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background-color 0.3s ease;
  }

  .ai-accordion-header-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.header_hover_background }};
  }

  .ai-accordion-header-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: {{ block.settings.header_font_weight }};
    color: {{ block.settings.header_text_color }};
    margin: 0;
  }

  .ai-accordion-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
    color: {{ block.settings.icon_color }};
  }

  .ai-accordion-item-{{ ai_gen_id }}.active .ai-accordion-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-accordion-content-wrapper-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }

  .ai-accordion-content-{{ ai_gen_id }} {
    padding: 0 {{ block.settings.header_padding }}px {{ block.settings.content_padding }}px {{ block.settings.header_padding }}px;
    color: {{ block.settings.content_text_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-accordion-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-accordion-header-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.header_font_size | times: 0.9 }}px;
    }

    .ai-accordion-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<accordion-section-{{ ai_gen_id }} class="ai-accordion-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_title != blank %}
    <h2 class="ai-accordion-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
  {% endif %}

  <div class="ai-accordion-items-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign item_title_key = 'item_' | append: i | append: '_title'
        assign item_content_key = 'item_' | append: i | append: '_content'
        assign item_open_key = 'item_' | append: i | append: '_open_default'
        
        assign item_title = block.settings[item_title_key]
        assign item_content = block.settings[item_content_key]
        assign item_open = block.settings[item_open_key]
      %}

      <div class="ai-accordion-item-{{ ai_gen_id }} {% if item_open %}active{% endif %}" data-accordion-item>
        <button 
          class="ai-accordion-header-{{ ai_gen_id }}"
          aria-expanded="{% if item_open %}true{% else %}false{% endif %}"
          data-accordion-trigger
        >
          <h3 class="ai-accordion-header-title-{{ ai_gen_id }}">{{ item_title }}</h3>
          <svg class="ai-accordion-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </button>
        <div class="ai-accordion-content-wrapper-{{ ai_gen_id }}" data-accordion-content>
          <div class="ai-accordion-content-{{ ai_gen_id }}">
            {{ item_content }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</accordion-section-{{ ai_gen_id }}>

<script>
  (function() {
    class AccordionSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.items = this.querySelectorAll('[data-accordion-item]');
        this.setupAccordion();
      }

      setupAccordion() {
        this.items.forEach((item) => {
          const trigger = item.querySelector('[data-accordion-trigger]');
          const content = item.querySelector('[data-accordion-content]');
          const contentInner = content.querySelector('.ai-accordion-content-{{ ai_gen_id }}');

          if (item.classList.contains('active')) {
            content.style.maxHeight = contentInner.scrollHeight + 'px';
          }

          trigger.addEventListener('click', () => {
            const isActive = item.classList.contains('active');

            if (isActive) {
              this.closeItem(item, trigger, content);
            } else {
              this.openItem(item, trigger, content, contentInner);
            }
          });
        });
      }

      openItem(item, trigger, content, contentInner) {
        item.classList.add('active');
        trigger.setAttribute('aria-expanded', 'true');
        content.style.maxHeight = contentInner.scrollHeight + 'px';
      }

      closeItem(item, trigger, content) {
        item.classList.remove('active');
        trigger.setAttribute('aria-expanded', 'false');
        content.style.maxHeight = '0';
      }
    }

    customElements.define('accordion-section-{{ ai_gen_id }}', AccordionSection{{ ai_gen_id }});
  })();
</script>


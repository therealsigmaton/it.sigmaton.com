<footer class="footer">
  <div class="container">
    <div class="grid two">
      <div>
        <div class="brand" style="gap:10px;">
          <img src="{{ 'sigmaton-mark.png' | asset_url }}" alt="{{ shop.name }}">
          <div>
            <div style="font-weight:800;">{{ section.settings.brand_name }}</div>
            <div class="small">{{ section.settings.tagline }}</div>
          </div>
        </div>
        <p class="small" style="margin-top:14px;">{{ section.settings.disclaimer }}</p>
      </div>
      <div class="card" style="padding:18px;">
        <div style="font-weight:800; margin-bottom:8px;">Contact Us</div>
        <div class="small">{{ section.settings.email }}</div>
        <div class="small">{{ section.settings.phone }}</div>
        <div class="small">{{ section.settings.phone1 }}</div>
        <div class="small">{{ section.settings.phone2 }}</div>
        <div class="small">{{ section.settings.phone3 }}</div>

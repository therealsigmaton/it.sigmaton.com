<section class="section" id="contact">
  <div class="container">
    <div class="soft-panel" style="padding:22px;">
      <div class="grid two" style="align-items:start;">
        <div>
          <div class="eyebrow">{{ section.settings.eyebrow }}</div>
          <h2 class="h2">{{ section.settings.heading }}</h2>
          <p class="small" style="margin-top:12px;max-width:72ch;">{{ section.settings.body }}</p>
          <div class="badges" style="margin-top:12px;">
            <span class="badge">Email: {{ section.settings.email }}</span>
            <span class="badge">Response: {{ section.settings.sla }}</span>
          </div>
        </div>
        <div class="card" style="padding:18px;">
          {% form 'contact' %}
            {% if form.posted_successfully? %}<div class="notice">Thanks — we received your message and will get back to you shortly.</div>{% endif %}
            {% if form.errors %}<div class="notice">Please check the form and try again.</div>{% endif %}
            <div class="form" style="margin-top:10px;">
              <div><label for="ContactFormName">Name</label><input id="ContactFormName" type="text" name="contact[name]" autocomplete="name" required></div>
              <div><label for="ContactFormEmail">Email</label><input id="ContactFormEmail" type="email" name="contact[email]" autocomplete="email" required></div>
              <div><label for="ContactFormMessage">What do you need help with?</label><textarea id="ContactFormMessage" name="contact[body]" required></textarea></div>
              <button class="btn" type="submit">{{ section.settings.button_label }}</button>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{"name":"Contact CTA","settings":[
{"type":"text","id":"eyebrow","label":"Eyebrow","default":"Contact"},
{"type":"text","id":"heading","label":"Heading","default":"Let’s scope your project"},
{"type":"textarea","id":"body","label":"Body","default":"Send a note with your goals, timeline, and current stack. We’ll reply with next steps and a proposed discovery plan."},
{"type":"text","id":"email","label":"Email","default":"hello@sigmaton.com"},
{"type":"text","id":"sla","label":"Response SLA","default":"within 1 business day"},
{"type":"text","id":"button_label","label":"Button label","default":"Send message"}],
"presets":[{"name":"Contact CTA"}]}
{% endschema %}
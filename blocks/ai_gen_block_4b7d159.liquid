{% doc %}
  @prompt
    Create a professional hero section with an IT software technology background image featuring abstract digital elements, circuit patterns, and modern tech aesthetic in blue and dark tones. The hero section should include areas for a heading, subheading, and call-to-action buttons with good contrast against the tech background. Make the text readable with proper overlay or text shadows.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tech-hero-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    min-height: {{ block.settings.hero_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: #0a1628;
  }

  .ai-tech-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-tech-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-tech-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0a1628 0%, #1a2f4f 50%, #0d1b2e 100%);
    position: relative;
    overflow: hidden;
  }

  .ai-tech-hero-background-placeholder-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(59, 130, 246, 0.03) 2px, rgba(59, 130, 246, 0.03) 4px),
      repeating-linear-gradient(90deg, transparent, transparent 2px, rgba(59, 130, 246, 0.03) 2px, rgba(59, 130, 246, 0.03) 4px);
  }

  .ai-tech-hero-background-placeholder-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    height: 80%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
  }

  .ai-tech-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.05;
  }

  .ai-tech-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 2;
  }

  .ai-tech-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: {{ block.settings.content_max_width }}px;
    padding: 60px 20px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-tech-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    line-height: 1.2;
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px {{ block.settings.text_shadow_blur }}px {{ block.settings.text_shadow_color }};
  }

  .ai-tech-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 400;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 30px;
    line-height: 1.6;
    text-shadow: {{ block.settings.text_shadow_x }}px {{ block.settings.text_shadow_y }}px {{ block.settings.text_shadow_blur }}px {{ block.settings.text_shadow_color }};
  }

  .ai-tech-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-tech-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 15px 35px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-tech-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_color }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-tech-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    border-color: {{ block.settings.primary_button_hover_bg }};
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  .ai-tech-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_color }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .ai-tech-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    color: {{ block.settings.secondary_button_hover_color }};
    border-color: {{ block.settings.secondary_button_hover_border }};
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  .ai-tech-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background-color: rgba(0, 0, 0, 0.6);
    color: rgba(255, 255, 255, 0.8);
    font-size: 14px;
    border-radius: 6px;
    z-index: 4;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-tech-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.hero_height | times: 0.7 }}px;
    }

    .ai-tech-hero-content-{{ ai_gen_id }} {
      padding: 40px 20px;
    }

    .ai-tech-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-tech-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-tech-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
    }

    .ai-tech-hero-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-tech-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-tech-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-tech-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-tech-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-tech-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-tech-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-tech-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.primary_button_label != blank or block.settings.secondary_button_label != blank %}
      <div class="ai-tech-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_label != blank %}
          <a
            href="{{ block.settings.primary_button_link }}"
            class="ai-tech-hero-button-{{ ai_gen_id }} ai-tech-hero-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_button_label }}
          </a>
        {% endif %}

        {% if block.settings.secondary_button_label != blank %}
          <a
            href="{{ block.settings.secondary_button_link }}"
            class="ai-tech-hero-button-{{ ai_gen_id }} ai-tech-hero-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>

  {% unless block.settings.background_image %}
    <div class="ai-tech-hero-empty-state-{{ ai_gen_id }}">
      Next, add a background image for your tech hero
    </div>
  {% endunless %}
</div>

